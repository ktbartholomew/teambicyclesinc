{% extends "layouts/_base.twig" %}

{% block bodyClasses %}page{% endblock %}
{% block content %}
<article class="{{ page.class }}">
  {% if page.header_background_image %}
    <div class="header" style="background-image: url({{ page.header_background_image.src }});">
  {% else %}
    <div class="header">
  {% endif %}
    <h1 class="title">{{ page.title }}</h1>
  </div>
  <div class="content">
    {% block pageContent %}{{ page.content }}{% endblock %}
  </div>
</article>
{% endblock %}
